generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tours     Tour[]   @relation("TourGuide")
  bookings  Booking[]
}

model Tour {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  duration    Int      // Duration in hours
  location    String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  guideId     String
  guide       User     @relation("TourGuide", fields: [guideId], references: [id])
  bookings    Booking[]
  maxGroupSize Int     @default(10)
  startDates  DateTime[]
}

model Booking {
  id        String   @id @default(cuid())
  tourId    String
  userId    String
  tour      Tour     @relation(fields: [tourId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime
  status    BookingStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  price     Float    // Price at the time of booking
}

model Review {
  id              String   @id @default(cuid())
  reviewerInitial String   @db.Char(1)
  reviewerName    String
  reviewText      String   @db.Text
  readMoreLink    String?
  isActive        Boolean  @default(true)
  order           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([order, isActive])
}

model MiceCard {
  id          String   @id @default(cuid())
  label       String
  date        DateTime
  content     String
  imageUrl    String
  imageAlt    String
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order, isActive])
}

model FAQ {
  id          String   @id @default(cuid())
  title       String   @db.Text
  content     String   @db.Text
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  category    String?  // Optional category for grouping FAQs
  locale      String   @default("en") // For handling different languages
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order, isActive])
  @@index([locale, isActive])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum InquiryType {
  TRAVEL_CONSULTATION
  SHUTTLE_SERVICE
  MICE_SERVICE
}

model Support {
  id          String      @id @default(cuid())
  inquiryType InquiryType
  fullName    String
  email       String
  inquiry     String      @db.Text
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  status      InquiryStatus @default(PENDING)
}

enum InquiryStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  CLOSED
}
